{
  "name": "next-day",
  "productName": "Next Day",
  "version": "1.0.0",
  "description": "Countdown App",
  "license": "MIT",
  "author": "Zainab Khoshnaw",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-arm64": "electron-packager . \"Next Day\" --platform=darwin --arch=arm64 --icon=icon.icns --out=out --overwrite",
    "package-x64": "electron-packager . \"Next Day\" --platform=darwin --arch=x64 --icon=icon.icns --out=out --overwrite",
    "make-universal": "npx @electron/universal --input=out/Next\\ Day-darwin-{x64,arm64} --output=Next\\ Day-universal",
    "package-win": "electron-packager . \"Next Day\" --platform=win32 --arch=x64 --icon=icon.ico --out=out --overwrite",
    "build-all": "npm run package-arm64 && npm run package-x64 && npm run make-universal"
  },
  "build": {
    "files": [
      "**/*",
      "renderer/fonts/**/*"
    ]
  },
  "dependencies": {
    "next-day": "^1.2.0",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "@electron/universal": "^2.0.3",
    "electron": "^36.3.2",
    "electron-packager": "^17.1.2",
    "electron-reload": "^2.0.0-alpha.1"
  }
}